.container
    header
        span.header__left
            a.header__home(href='/')
                .round.round--small
                    img.user__pic(ng-src='{{user.profilePicture}}')
             span.header__name {{user.name}}
        span.header__right
            button.header__logout.btn.btn-danger(ng-click='logOut()')
                i.fa.fa-sign-out.fa-lg
    .queue
        h1.queue__title Customers Waiting
        h3.queue__category General Issues
        <hr/>
        .queue__item
            .issue__preview
                span.issue__user
                    .round
                        img.user__pic(src='img/default.jpg')
                    span.user__name Jaiden Gerig
                span.issue__date 05/13/16
            .issue__body
                p.issue_detail I need help with my grandson and the other millenials
                .text-center
                    button.issue__help.btn.btn-success Assist